<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Asesoria" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Asesoria" parent="Base.Theme.Asesoria" />

    <style name="small" parent="Theme.Asesoria">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="login_button">
        <item name="backgroundTint">@color/teal</item>
        <item name="android:radius">0dp</item>

    </style>
    <style name="progress">
        <item name="android:radius">50dp</item>
    </style>
    <style name="title">
        <item name="android:textSize">36dp</item>
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text_introduction">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="text_question">
        <item name="android:textSize">24dp</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textColor">#218838</item>
    </style>
    <style name="title_frament2">
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="subtitle1_frament2">
        <item name="android:textSize">22dp</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="subtitle2_frament2">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/opensans_regular</item>
    </style>
    <style name="subtitle1_frament3">
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/montserratregular</item>
        <item name="android:textColor">@color/gray</item>
    </style>

</resources>